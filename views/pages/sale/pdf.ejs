<!-- Push notifications  -->
<%
var GTotal=0;
var total=0;
var price=0;
var quantity=0;
for(var sprod of saleProd ){
  if(sale.id == sprod.sale){
    price=sprod.price;
    quantity= sprod.qty;
    total=price *quantity;
    GTotal= GTotal + total;
 } } %>

 <%
 var fAmount=0;
 var amount = 0;
 var balance =0;
 for(var pay of payment ){
   if(sale.id == pay.sale){
     amount=pay.amount;
     fAmount = amount+ fAmount;
   }
 }
balance=GTotal-fAmount; %>
<div class="page-header">
	<div class="page-actions">
    <div id="total-cont">
      <a href="/sale/view/<%= sale.id %>" class="btn btn-success">Go Back</a>
      <button type="button" class="btn btn-<% if(balance==0){ %>success<% } else { %>primary<% } %>" id="pt-pdf">
        TOTAL <span class="badge badge-light"></span>
      </button>
      </div>
	</div>
</div>
<div id="editor"></div>
<div class="page-content">
  <div id="pdf-content" class="container">
    <div class="row">
    <div class="col-md-12">
      <div class="pd-top row">
        <div class="col-md-8">
          <div class="pd-logo">
            <img src="/assets/img/logo.png" alt="logo" class="logo">
          </div>
        </div>
        <div class="col-md-4">
          <div class="pd-info">
            <p>Phones & Tablets Kenya</p>
            <p>sales@phonestablets.co.ke</p>
            <p>07xxxxxxxxxxx/07xxxxxxxxx</p>
            <p>1st Floor</p>
            <p>Kimathi House, Kimathi rd</p>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-12">
      <div class="pd-bottom">

      </div>
    </div>
    <div class="col-md-4 col-sm-6 col-xs-12">
      <div class="row">
        <div class="col-md-4">
          <div class="pd-sec-head">
            Billed To:
          </div>
          <div class="pd-sec-body">
            <% for (var c of client){ if(c.id == sale.client){ %>
            <%= c.first_name %><br>
            <%= c.last_name %><br>
            <%= c.email %><br>
            <%= c.phone %><br>
            <% } } %>
          </div>
        </div>
        <div class="col-md-4">

        </div>
        <div class="col-md-4">

        </div>
      </div>


    </div>
    <div class="col-md-12 col-sm-12 col-xs-12">
      <table class="table table-striped table-hover table-sm">
    		<thead class="thead-dark">
        <th>Product</th>
        <th>Price</th>
        <th>Qty</th>
        <th>Subtotal</th>
      </thead>
      <tbody id="prod_sec">
        <% for(var sprod of saleProd ){
            if(sale.id == sprod.sale){ %>
          <tr>
              <% for(var c of col){
                if(sprod.product==c.id){
                 for( var prod of products){
                   if(c.product == prod.id){
                  %>
                <td><%= prod.title %></td>
              <% } } } } %>
            <td>Ksh. <%= sprod.price %></td>
            <td>
              <% var qty=0; for(var i of imei){
                if(i.sale == sprod.id){
                qty=qty+1;
              } } %>
              <%= qty %></td>
            <td>
              Ksh. <%= qty*sprod.price %>
            </td>
          </tr>
        <% } } %>
        <tr><td></td><td></td><td></td><td class="pd-total"><%= GTotal %></td></tr>
      </tbody>
    </table>
    </div>
    <div class="col-md-12">
      <hr>
    </div>
  </div>
