<form action="/sale/add-shipped/<%= id %>" method="post" role="form" class="row">
  <div class="col-md-6 col-sm-6 col-xs-12">
    <div class="md-form">
      <label for="location">Location</label>
      <select id="sale-courier" class="custom-select" name="location">
        <option selected>Choose Location</option>
        <% for(var d of dLoc){ %>
          <option value="<%= d.id %>" <% if(d.id == location){ %>selected  <% } %>><%= d.location %></option>
        <% } %>
      </select>
    </div>
  </div>
  <div class="col-md-6 col-sm-6 col-xs-12">
    <div class="md-form">
      <label for="courier">Courier</label>
      <select id="courier" class="custom-select" name="courier">
        <option selected>Choose Courier</option>
        <% for(var l of loc){
          if(l.branch == location){ %>
          <option value="<%= l.id %>">
            <% for(var c of courier){
              if(c.id == l.courier){ %>
                <%= c.name %>
              <% }
            }%>
            | <%= l.amount %>
          </option>
        <% } } %>
      </select>
    </div>
  </div>
  <div class="col-md-6 col-sm-6 col-xs-12">
    <div class="md-form">
      <label for="waybill">Waybill</label>
      <input class="form-control" name="waybill">
    </div>
  </div>
  <div class="col-md-6 col-sm-6 col-xs-12">
    <label for="payment">Payment</label>
    <div class="form-check">
      <input class="form-check-input" type="radio" name="payment" id="p-paid" value="Not Paid" checked>
      <label class="form-check-label" for="p-paid">
        Not Paid
      </label>
    </div>
    <div class="form-check">
      <input class="form-check-input" type="radio" name="payment" id="n-paid" value="Paid">
      <label class="form-check-label" for="n-paid">
        Paid
      </label>
    </div>
  </div>
  <div class="form-group col-md-12">
    <div class="col-md-9 col-sm-9 col-xs-12 col-md-offset-3">
      <button type="submit" class="btn btn-success">Submit</button>
    </div>
  </div>
</form>
