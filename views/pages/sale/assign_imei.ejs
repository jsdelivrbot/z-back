<% include ../../partials/header %>
<div class="page-header">
	<div class="page-title">

	</div>
	<div class="page-actions">

	</div>
</div>
<div class="page-content">
  <form action="/sale/assign_imei/<%= cproducts.id %>" method="post" autocomplete="off">
    <div class="row">
      <div class="col-md-6">
				<div class="row">
					<div class="col-md-6">
						<div class="form-group">
		          <label for="vendor">Vendor</label>
		          <% for(var ven of vendor){
		            if(cproducts.vendor == ven.id){ %>
		              <input type="text" name="vendor" id="vendor" value="<%= ven.name %>" class="form-control" disabled>
		              <input type="hidden" name="vendor_id" value="<%= ven.id %>">
		          <% } } %>
		        </div>
					</div>
					<div class="col-md-6">
						<div class="form-group">
		          <label for="user">Collected By</label>
		          <% for(var u of user){
		            if(cproducts.col_user == u.id){ %>
		              <input type="text" name="user" id="user" value="<%= u.first_name %> <%= u.last_name %>" class="form-control" disabled>
		              <input type="hidden" name="user_id" value="<%= u.id %>">
		          <% } } %>
		        </div>
					</div>
				</div>

        <div class="form-group">
          <label for="product">Product</label>
          <% for(var prod of products){
            if(cproducts.product == prod.id){ %>
              <input type="text" name="product" id="product" value="<%= prod.title %>" class="form-control" disabled>
              <input type="hidden" name="product_id"  value="<%= prod.id %>">
          <% } } %>
        </div>
      </div>
      <div class="col-md-6">
        <h6>Products Picked From Vendor</h6>
        <button type="button" name="button" onclick="addimei()" class="btn btn-outline-danger">Add Imei/Serial</button>
				<table class="table table-striped table-hover table-sm"><thead class="thead-dark"><tr><th>Imei/Serial Number</th><th>Action</th></tr></thead><tbody id="imei_sec"></tbody></table>
      </div>
    </div>
    <div class="col-md-12 pull-right">
      <button type="submit" class="btn btn-success">SUBMIT</button>
    </div>
  </form>

  <hr>
  <div id="vendor_table" class=""></div>
</div>
<% include ../../partials/footer %>
