<% include ../../partials/header %>
<div class="page-header">
	<div class="page-title">
		Add Client
	</div>
	<div class="page-actions">

	</div>
</div>
<div class="page-content">
    <form action="/inquiry/edit/<%= salCont.id %>" method="post" role="form" >
    <div class="row">
        <div class="col-md-12">
            <select class="form-control" name="status" id="status">
                <option value="raw" <% if(salCont.status=='raw'){ %> selected <% } %>>Raw</option>
                <option value="pending" <% if(salCont.status=='pending'){ %> selected <% } %>>Pending</option>
                <option value="closed" <% if(salCont.status=='closed'){ %> selected <% } %>>Closed</option>
            </select>
        </div>
        <div class="col-md-6">
            <div class="form-form">
                <label for="name">Name</label>
                <input type="text" id="name" class="form-control" value="<%= salCont.name %>" disabled>
            </div>
            <div class="form-form">
                <label for="phone">Phone</label>
                <input type="text" id="phone" class="form-control" value="<%= salCont.phone %>" disabled>
            </div>
            <div class="form-form">
                <label for="phone">Email</label>
                <input type="text" id="email" class="form-control" value="<%= salCont.email %>" disabled>
            </div>
            <hr>
            <div class="form-form">
                <%= salCont.product.title %>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-form">
                <label for="message"> <strong> Message :: </label>
                <%= salCont.message %>
            </div>
            <hr>
            <div class="form-form">
                    <label for="note">Note</label>
                    <textarea id="note" name="note" class="form-control"><%= salCont.note %></textarea>
                </div>
        </div>
        <hr>
        <div class="form-group col-sm-12 padding-15">
            <button type="submit" class="btn btn-primary pull-right">Submit</button>
        </div>
    </div>
    </form>
</div>
<% include ../../partials/footer %>
