<% include ../../partials/header %>
<div class="page-header">
	<div class="page-title">
		Vendors
	</div>
	<div class="page-actions">
			<a href="/vendor/add" class="btn btn-success pull-right">Add Vendor</a>
	</div>
</div>
<div class="page-content">
	<table class="table table-striped table-hover table-sm data-tables">
		<thead class="thead-dark">
					<tr>
							<th scope="col">name</th>
							<th scope="col">Phone</th>
							<th scope="col">Email</th>
							<th scope="col">Active</th>
							<th scope="col" class="actions">Actions</th>
					</tr>
			</thead>
			<tbody>
					<% for(var i = 0; i < vendors.length; i++) { %>
					<tr>
							<td><%= vendors[i].name %></td>
							<td><%= vendors[i].phone %></td>
							<td><%= vendors[i].email %></td>
							<td><%= vendors[i].is_active %></td>
							<td class="actions">
								<div class="btn-group btn-group-sm" role="group" aria-label="Basic example">
								  <a href="/vendor/view/<%= vendors[i].id %>" class="btn btn-success">View</a>
								  <a href="/vendor/edit/<%= vendors[i].id %>" class="btn btn-info">Edit</a>
								</div>
							</td>
					</tr>
				<% } %>
			</tbody>
	</table>
</div>
<% include ../../partials/footer %>
