<% include ../../partials/header %>
<div class="page-header">
	<div class="page-title">
    Edit Product Info
	</div>
	<div class="page-actions">
		{width: 270px , height: 270px;}
		<button type="button" class="btn btn-outline-primary" data-toggle="modal" data-target="#image-Modal">Add Image</button>
	</div>
</div>
<div class="page-content">
	<table class="table table-striped table-bordered table-sm">
		<thead>
			<tr>
				<th>Image</th>
				<th>Sort</th>
				<th>Action</th>
			</tr>
		</thead>
		<tbody>
			<% for(var i of products.images){ %>
				<tr>
					<td><img src="<%= i[0] %>" alt="<%= i[0] %>" style="max-width: 100px;"></td>
					<td><%= i[1] %></td>
					<td><form action="/products/delete-image/<%= products.id %> %>" method="post"><input type="hidden" name="image" value="<%= i %>"><button type="submit" class="btn btn-outline-danger">Delete</button></form></td>
				</tr>
			<% } %>
		</tbody>
	</table>

</div>
<!-- Modal -->
<div class="modal fade" id="image-Modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add Image</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
				<form action="/products/add-image/<%= products.id %>" method="post" role="form" class="row" autocomplete="off" enctype="multipart/form-data">
					<div class="col-md-6 col-sm-6 col-xs-12">
							<div class="form-group">
								<label class="control-label col-md-12 col-sm-12 col-xs-12" for="image">Image </label>
								<div class="col-md-12 col-sm-12 col-xs-12">
									<input type="file" name="image" id="image" class ="form-control" required>
								</div>
							</div>
			    </div>
			    <div class="col-md-6 col-sm-6 col-xs-12">
						<div class="form-group">
							<label class="control-label col-md-12 col-sm-12 col-xs-12" for="sort">Sort </label>
							<div class="col-md-12 col-sm-12 col-xs-12">
								<input type="text" name="sort" class="form-control" placeholder="Sort" required>
							</div>
						</div>
			    </div>
				<!--	<button type="button" name="button" onclick="addImgRows()">Add Image</button>
			     <div class="col-md-12 col-sm-12 col-xs-12 form-group has-feedback">
						<table>
							<thead>
								<tr>
									<th>Image</th>
									<th>Sort</th>
								</tr>
							</thead>
							<tbody id="imgRows">
								<tr>
									<td></td>
									<td></td>
								</tr>
							</tbody>
						</table>
			    </div>
			    <div class="clearfix"></div>
			    </div>-->
			    <div class="col-md-3 col-sm-6 col-xs-12 has-feedback">
						<div class="form-group">
			      	<div class="col-md-9 col-sm-9 col-xs-12 col-md-offset-3">
								<button type="submit" class="btn btn-success">Submit</button>
							</div>
						</div>
					</div>
			  </form>
      </div>
    </div>
  </div>
</div>
<% include ../../partials/footer %>
